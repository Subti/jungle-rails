<div class="d-flex justify-content-center">
  <div class="col-6 signup-form">
    <h1 class="mb-4 text-center">Signup!</h1>

    <%= form_for :user, url: '/users', html: { class: 'needs-validation', novalidate: '' } do |f| %>

      <div class="form-group">
        <%= f.label :name, 'Full Name' %>
        <%= f.text_field :name, class: 'form-control', required: '' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.text_field :email, class: 'form-control', required: '' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control', required: '' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'Password Confirmation' %>
        <%= f.password_field :password_confirmation, class: 'form-control', required: '' %>
      </div>

      <%= f.submit "Submit", class: 'btn btn-primary mt-3' %>

    <% end %>
  </div>
</div>