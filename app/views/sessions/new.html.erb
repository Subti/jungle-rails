<div class="d-flex justify-content-center">
  <div class="col-6 login-form">
    <h1 class="mb-4 text-center">Login</h1>

    <%= form_tag '/login', html: { class: 'needs-validation', novalidate: '' } do %>

      <div class="form-group">
        <%= label_tag :email, 'Email' %>
        <%= text_field_tag :email, nil, class: 'form-control', required: '' %>
      </div>

      <div class="form-group">
        <%= label_tag :password, 'Password' %>
        <%= password_field_tag :password, nil, class: 'form-control', required: '' %>
      </div>

      <%= submit_tag "Submit", class: 'btn btn-primary mt-3' %>

    <% end %>
  </div>
</div>